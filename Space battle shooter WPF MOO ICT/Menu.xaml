<Window x:Class="Space_battle_shooter_WPF_MOO_ICT.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_battle_shooter_WPF_MOO_ICT"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2E3C59" Offset="0.0" />
                        <GradientStop Color="#1D263F" Offset="1.0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4A5A82"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="15"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4A5A82" Offset="0.0" />
                                            <GradientStop Color="#2E3C59" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1D263F" Offset="0.0" />
                                            <GradientStop Color="#121827" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Image x:Name="backgroundGifImage" gif:ImageBehavior.AnimatedSource="images/animated_bg.gif" Stretch="Fill" />

        <Canvas>
            <Label Content="Select Your Ship" Canvas.Left="297" Canvas.Top="80" FontSize="24" FontWeight="Bold" Foreground="White">
                <Label.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="3" BlurRadius="8" Opacity="0.8"/>
                </Label.Effect>
            </Label>
            <Image x:Name="playerShipImage" Height="100" Width="100" Canvas.Left="344" Canvas.Top="150">
                <Image.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="10" BlurRadius="30" Opacity="0.8" Direction="270"/>
                </Image.Effect>
            </Image>
            <Button x:Name="prevButton" Content="&lt;" Canvas.Left="274" Canvas.Top="185" Width="50" Height="30" Click="prevButton_Click"/>
            <Button x:Name="nextButton" Content="&gt;" Canvas.Left="464" Canvas.Top="185" Width="50" Height="30" Click="nextButton_Click"/>
            <Button x:Name="startButton" Content="Start" Canvas.Left="344" Canvas.Top="280" Width="100" Height="40" Click="startButton_Click" FontSize="18"/>
        </Canvas>

    </Grid>
</Window>
